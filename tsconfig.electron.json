{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist-electron",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "shared/*"
            ]
        }
    },
    "include": [
        "electron/**/*",
        "shared/**/*"
    ]
}