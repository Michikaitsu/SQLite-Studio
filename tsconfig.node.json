{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "composite": true,
        "skipLibCheck": true,
        "emitDeclarationOnly": true,
        "declaration": true,
        "declarationDir": "./dist-types",
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "vite.config.ts"
    ]
}